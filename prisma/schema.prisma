generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())

  firstName      String?
  lastName       String?
  userName       String?  @unique
  city           String?
  state          String?

  email          String  @unique
  hash           String 

  measuredThrows  measuredThrow[]
  scorecards  Scorecard[]
  hole        Hole[]
  @@map("users")
}

model measuredThrow {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())

  disc        String
  color       String?
  throwtype   String?
  distance    String

  userId      Int
  user User @relation(fields: [userId], references: [id])

  @@map("measuredThrows")
}

model Scorecard {
    id            Int @id @default(autoincrement())
    createdAt     DateTime @default(now())

    isCompleted    Boolean?
    courseLength  Int
    courseName    String?
    holes         Hole[]

    playerId       Int
    user User  @relation(fields: [playerId], references: [id])

}

model Hole {
    id            Int @id @default(autoincrement())

    holeNumber    Int
    par           Int
    strokes       Int

    playerId      Int
    scorecardId   Int?

    scorecard   Scorecard? @relation(fields: [scorecardId], references: [id])
    user User  @relation(fields: [playerId], references: [id])
}